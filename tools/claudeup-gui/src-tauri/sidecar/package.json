{
  "name": "claudeup-sidecar",
  "version": "1.0.0",
  "type": "module",
  "description": "Node.js sidecar for claudeup-gui with stdio JSON-RPC communication",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "compile": "bun build src/server.ts --compile --outfile dist/claudeup-sidecar"
  },
  "dependencies": {
    "claudeup-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.6.3"
  }
}
